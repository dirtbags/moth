FROM alpine:3.7

RUN apk --no-cache add \
    gcc \
    musl-dev \
    python3 \
    python3-dev \
    py3-pillow \
  && \
    pip3 install aiohttp

COPY . /moth/
COPY example-puzzles /puzzles/

WORKDIR /moth/
ENTRYPOINT ["python3", "/moth/tools/devel-server.py", "--bind", ":8080", "--puzzles", "/puzzles"]
